<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/showpan4"
        android:layout_alignParentLeft="true"
        android:textSize="40sp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        />

    <EditText
        android:id="@+id/showpan3"
        android:layout_below="@id/showpan4"
        android:textSize="40sp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        />

    <EditText
        android:id="@+id/showpan2"
        android:layout_below="@id/showpan3"
        android:textSize="40sp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        />

    <EditText
        android:id="@+id/showpan1"
        android:layout_below="@+id/showpan2"
        android:textSize="30sp"
        android:text="0"
        android:textAlignment="textEnd"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />


    <Button
        android:id="@+id/leftBracket"
        android:text="("
        android:textSize="20sp"
        android:layout_below="@id/showpan1"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/rightBracket"
        android:text=")"
        android:textSize="20sp"
        android:layout_below="@id/showpan1"
        android:layout_toRightOf="@id/leftBracket"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/sin"
        android:text="sin"
        android:textSize="20sp"
        android:layout_below="@id/showpan1"
        android:layout_toRightOf="@id/rightBracket"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/cos"
        android:text="cos"
        android:textSize="20sp"
        android:layout_below="@id/showpan1"
        android:layout_toRightOf="@id/sin"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/powerSym"
        android:text="x^y"
        android:textSize="20sp"
        android:layout_below="@id/showpan1"
        android:layout_toRightOf="@id/cos"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/C"
        android:text="C"
        android:textSize="20sp"
        android:layout_below="@id/leftBracket"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/Delete"
        android:text="Del"
        android:textSize="20sp"
        android:layout_below="@id/leftBracket"
        android:layout_toRightOf="@id/C"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="25%" />

    <Button
        android:id="@+id/mutiply"
        android:text="*"
        android:textSize="20sp"
        android:layout_below="@id/leftBracket"
        android:layout_toRightOf="@id/divide"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/divide"
        android:layout_below="@+id/sin"
        android:layout_toEndOf="@+id/Delete"
        android:text="/"
        android:textSize="20sp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="25%" />

    <Button
        android:id="@+id/seven"
        android:text="7"
        android:textSize="20sp"
        android:layout_below="@id/C"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/eight"
        android:text="8"
        android:textSize="20sp"
        android:layout_below="@id/Delete"
        android:layout_toRightOf="@id/seven"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/nine"
        android:text="9"
        android:textSize="20sp"
        android:layout_below="@id/divide"
        android:layout_toRightOf="@id/eight"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/substract"
        android:text="-"
        android:textSize="20sp"
        android:layout_below="@id/mutiply"
        android:layout_toRightOf="@id/nine"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/four"
        android:text="4"
        android:textSize="20sp"
        android:layout_below="@id/seven"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/five"
        android:text="5"
        android:textSize="20sp"
        android:layout_below="@id/eight"
        android:layout_toRightOf="@id/four"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/six"
        android:text="6"
        android:textSize="20sp"
        android:layout_below="@id/nine"
        android:layout_toRightOf="@id/five"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/add"
        android:text="+"
        android:textSize="20sp"
        android:layout_below="@id/substract"
        android:layout_toRightOf="@id/six"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />


    <Button
        android:id="@+id/one"
        android:text="1"
        android:textSize="20sp"
        android:layout_below="@id/four"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/two"
        android:text="2"
        android:textSize="20sp"
        android:layout_below="@id/five"
        android:layout_toRightOf="@id/one"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/three"
        android:text="3"
        android:textSize="20sp"
        android:layout_below="@id/six"
        android:layout_toRightOf="@id/two"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/equal"
        android:text="="
        android:textSize="20sp"
        android:layout_below="@id/add"
        android:layout_toRightOf="@id/three"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="20%"
        />

    <Button
        android:id="@+id/percent"
        android:text="%"
        android:textSize="20sp"
        android:layout_below="@id/one"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/zero"
        android:text="0"
        android:textSize="20sp"
        android:layout_below="@id/two"
        android:layout_toRightOf="@id/percent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />

    <Button
        android:id="@+id/dot"
        android:text="."
        android:textSize="20sp"
        android:layout_below="@id/three"
        android:layout_toRightOf="@id/zero"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="10%"
        />





</android.support.percent.PercentRelativeLayout>